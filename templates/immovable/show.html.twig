{% extends 'base.html.twig' %}

{% block title %}Immovable{% endblock %}

{% block body %}
    <div class="navbar__title--container p-3 text-white">
        <h5 class="text-white">{{ immovable.title|capitalize }} {{ immovable.address.city|capitalize }} ({{ immovable.address.zipCode }}) - {{ immovable.area }} m²</h5>
    </div>
    <div class="navbar__nav--container p-3 text-white">
        <a class="text-white" href="{{ path('immovable_index') }}">Accueil</a> >
        {% if immovable.prestation == 'location' %}
            <a class="text-white" href="#">Locations</a>
        {% else %}
            <a class="text-white" href="#">Ventes</a>
        {% endif %}
        <span>> {{ immovable.slug }}-{{ immovable.id }}</span>
    </div>
    <div class="show__image--container">
        <img class="show__image--background" src="../images/{{ immovable.image }}" alt="First slide">
        <div class="show__image--img">
            <img class="d-block w-100" src="../images/{{ immovable.image }}" alt="First slide">
        </div>
    </div>

    <div class="description__svg">
        <div class="description__svg--block">
            <span class="description__svg--area">M²</span>
            <span class="description__svg--value">{{ immovable.area }} m²</span>
        </div>

        <div class="description__svg--block">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path d="M624 448H512V50.8C512 22.78 490.47 0 464 0H175.99c-26.47 0-48 22.78-48 50.8V448H16c-8.84 0-16 7.16-16 16v32c0 8.84 7.16 16 16 16h608c8.84 0 16-7.16 16-16v-32c0-8.84-7.16-16-16-16zM415.99 288c-17.67 0-32-14.33-32-32s14.33-32 32-32 32 14.33 32 32c.01 17.67-14.32 32-32 32z"/></svg>
            <span class="description__svg--value">{{ immovable.room }}</span>
        </div>

        <div class="description__svg--block">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path d="M176 256c44.11 0 80-35.89 80-80s-35.89-80-80-80-80 35.89-80 80 35.89 80 80 80zm352-128H304c-8.84 0-16 7.16-16 16v144H64V80c0-8.84-7.16-16-16-16H16C7.16 64 0 71.16 0 80v352c0 8.84 7.16 16 16 16h32c8.84 0 16-7.16 16-16v-48h512v48c0 8.84 7.16 16 16 16h32c8.84 0 16-7.16 16-16V240c0-61.86-50.14-112-112-112z"/></svg>
            <span class="description__svg--value">{{ immovable.bedroom }}</span>
        </div>

        <div class="description__svg--block">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M488 256H80V112c0-17.645 14.355-32 32-32 11.351 0 21.332 5.945 27.015 14.88-16.492 25.207-14.687 59.576 6.838 83.035-4.176 4.713-4.021 11.916.491 16.428l11.314 11.314c4.686 4.686 12.284 4.686 16.971 0l95.03-95.029c4.686-4.686 4.686-12.284 0-16.971l-11.314-11.314c-4.512-4.512-11.715-4.666-16.428-.491-17.949-16.469-42.294-21.429-64.178-15.365C163.281 45.667 139.212 32 112 32c-44.112 0-80 35.888-80 80v144h-8c-13.255 0-24 10.745-24 24v16c0 13.255 10.745 24 24 24h8v32c0 28.43 12.362 53.969 32 71.547V456c0 13.255 10.745 24 24 24h16c13.255 0 24-10.745 24-24v-8h256v8c0 13.255 10.745 24 24 24h16c13.255 0 24-10.745 24-24v-32.453c19.638-17.578 32-43.117 32-71.547v-32h8c13.255 0 24-10.745 24-24v-16c0-13.255-10.745-24-24-24z"/></svg>
            <span class="description__svg--value">{{ immovable.bathroom }}</span>
        </div>
    </div>
    <div class="description__price">
        <span class="price__description">
            {{ immovable.price|number_format(0, '', ' ') }} €
            {% if immovable.prestation == 'location' %}
            par mois
            {% endif %}
        </span>
        {% if immovable.prestation == 'location' %}
            <span class="price__information d-block">Charges Comprises</span>
        {% endif %}
    </div>

    <div class="description__container container">
        <div class="row">
            <div class="col-md-8">
                <h2>Descriptif du bien</h2>
                <p>
                    {{ immovable.description|capitalize }}
                </p>
                <div class="links__container">
                    <div class="links__container--block">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M528.1 171.5L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6zM388.6 312.3l23.7 138.4L288 385.4l-124.3 65.3 23.7-138.4-100.6-98 139-20.2 62.2-126 62.2 126 139 20.2-100.6 98z"/></svg>
                    </div>
                    <div class="links__container--block">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M502.3 190.8c3.9-3.1 9.7-.2 9.7 4.7V400c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V195.6c0-5 5.7-7.8 9.7-4.7 22.4 17.4 52.1 39.5 154.1 113.6 21.1 15.4 56.7 47.8 92.2 47.6 35.7.3 72-32.8 92.3-47.6 102-74.1 131.6-96.3 154-113.7zM256 320c23.2.4 56.6-29.2 73.4-41.4 132.7-96.3 142.8-104.7 173.4-128.7 5.8-4.5 9.2-11.5 9.2-18.9v-19c0-26.5-21.5-48-48-48H48C21.5 64 0 85.5 0 112v19c0 7.4 3.4 14.3 9.2 18.9 30.6 23.9 40.7 32.4 173.4 128.7 16.8 12.2 50.2 41.8 73.4 41.4z"/></svg>
                    </div>
                    <div class="links__container--block">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M448 192V77.25c0-8.49-3.37-16.62-9.37-22.63L393.37 9.37c-6-6-14.14-9.37-22.63-9.37H96C78.33 0 64 14.33 64 32v160c-35.35 0-64 28.65-64 64v112c0 8.84 7.16 16 16 16h48v96c0 17.67 14.33 32 32 32h320c17.67 0 32-14.33 32-32v-96h48c8.84 0 16-7.16 16-16V256c0-35.35-28.65-64-64-64zm-64 256H128v-96h256v96zm0-224H128V64h192v48c0 8.84 7.16 16 16 16h48v96zm48 72c-13.25 0-24-10.75-24-24 0-13.26 10.75-24 24-24s24 10.74 24 24c0 13.25-10.75 24-24 24z"/></svg>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h2>Localisation</h2>
                <div class="localisation__container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83585.36209956883!2d6.126366193359873!3d49.10483181474008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4794dc1b6074b6a9%3A0x596be4b635bba669!2sMetz!5e0!3m2!1sfr!2sfr!4v1587731019390!5m2!1sfr!2sfr" width="300" height="300" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    <div class="rectangle"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="details__container">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Détails du bien</h2>
                    <table class="table">
                        <tr>
                            <td class="text-grey">Surface Habitable</td>
                            <td>{{ immovable.area }} m2</td>
                            <td class="text-grey">Secteur</td>
                            <td>{{ immovable.address.sector|capitalize }}</td>
                            <td class="text-grey">Honoraires</td>
                            <td>{{ immovable.fees }} €</td>
                        </tr>
                        <tr>
                            <td class="text-grey">Pièces</td>
                            <td>{{ immovable.room }}</td>
                            <td class="text-grey">Chauffage</td>
                            <td>{{ immovable.heat|capitalize }}</td>
                            {% if immovable.prestation == 'location' %}
                                <td class="text-grey">Dépôt de garantie</td>
                                <td>{{ immovable.securityDeposit }} €</td>
                            {% endif %}
                        </tr>
                        <tr>
                            <td class="text-grey">Chambres</td>
                            <td>{{ immovable.bedroom }}</td>
                            <td class="text-grey">DPE</td>
                            <td>{{ immovable.energyPerformanceCertificate|capitalize }}</td>
                        </tr>
                        <tr>
                            <td class="text-grey">Salles de bain</td>
                            <td>{{ immovable.bathroom }}</td>
                            <td class="text-grey">GES</td>
                            <td>{{ immovable.greenHouseGas|capitalize }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-3">Demande de rensignements</h2>
                <form class="needs-validation" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">Nom</label>
                            <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                            <div class="invalid-feedback">
                                Valid name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email">
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label for="exampleFormControlTextarea1">Message</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block btn__contact mt-3" type="submit">Envoyer</button>

                </form>
            </div>
            <div class="col-md-4">
                <h2 class="mb-3">Votre contact</h2>
                <div class="row">
                    <div class="col-md-4 contact__img--container">
                        <img src="../images/zoidberg.png" alt="profile">
                    </div>
                    <div class="col-md-8 text-center">
                        <h5>Jean Bon</h5>
                        <h6>Conseiller immobilier</h6>
                        <h6>+33 123 456 789</h6>
                        <h6>jean.bon@agence-immo.fr</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p class="text-center mt-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
